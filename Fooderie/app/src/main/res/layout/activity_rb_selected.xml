<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rbSelected">

    <TextView
        android:id="@+id/textView"
        android:layout_width="334dp"
        android:layout_height="37dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="32dp"
        android:autoSizeTextType="uniform"
        android:lineSpacingExtra="8sp"
        android:textColor="#0A1F81"
        android:textStyle="bold"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="416dp"
        android:layout_height="99dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/low_fat"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/low_fat" />

            <ImageView
                android:id="@+id/low_carb"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/low_carb" />

            <ImageView
                android:id="@+id/vegan"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/vegan" />

            <ImageView
                android:id="@+id/vegetarian"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/vegetarian" />

            <ImageView
                android:id="@+id/peanut_free"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/peanut_free" />

            <ImageView
                android:id="@+id/tree_nut_free"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/tree_nut_free" />

            <ImageView
                android:id="@+id/alcohol_free"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/alcohol_free" />

        </LinearLayout>

    </HorizontalScrollView>

<!--    <ImageView-->
<!--        android:id="@+id/recipeImage"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="150dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:padding="15dp"-->
<!--        android:src="@drawable/fat_free" />-->

    <Button
        android:id="@+id/website"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="Website"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="184dp"
        android:lineSpacingExtra="8sp"
        android:text="Ingredients:"
        android:textColor="#0A1F81"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <ListView
        android:id="@+id/ingredientsView"
        android:layout_width="418dp"
        android:layout_height="200dp"
        android:layout_below="@id/scrollView"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ListView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="410dp"
        android:layout_height="168dp"
        android:layout_marginTop="366dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView"
        tools:layout_editor_absoluteX="0dp">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="Nutritional Information"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Calories" />

            <TextView
                android:id="@+id/ENERC_KCAL"
                android:layout_column="2"
                android:padding="3dip" />

            <TextView
                android:id="@+id/ENERC_KCALunit"
                android:layout_column="3"
                android:padding="3dip" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Fat" />

            <TextView
                android:id="@+id/FAT"
                android:layout_column="2"
                android:padding="3dip" />

            <TextView
                android:id="@+id/FATunit"
                android:layout_column="3"
                android:padding="3dip" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Carbs" />

            <TextView
                android:id="@+id/CHOCDF"
                android:layout_column="2"
                android:padding="3dip" />

            <TextView
                android:id="@+id/CHOCDFunit"
                android:layout_column="3"
                android:padding="3dip" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Fiber" />

            <TextView
                android:id="@+id/FIBTG"
                android:layout_column="2"
                android:padding="3dip" />

            <TextView
                android:id="@+id/FIBTGunit"
                android:layout_column="3"
                android:padding="3dip" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Sugar" />

            <TextView
                android:id="@+id/SUGAR"
                android:layout_column="2"
                android:padding="3dip" />

            <TextView
                android:id="@+id/SUGARunit"
                android:layout_column="3"
                android:padding="3dip" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Protein" />

            <TextView
                android:id="@+id/PROCNT"
                android:layout_column="2"
                android:padding="3dip" />

            <TextView
                android:id="@+id/PROCNTunit"
                android:layout_column="3"
                android:padding="3dip" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>