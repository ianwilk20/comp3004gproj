<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

            </SearchView>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Page"
                android:textSize="85px"
                app:layout_constraintTop_toBottomOf="@+id/search"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/groceryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grocery List"
                app:layout_constraintTop_toBottomOf="@+id/mealPlannerButton"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/recipeBrowserButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openRecipeBrowser"
                android:text="Recipe Browser"
                app:layout_constraintTop_toBottomOf="@+id/cookingAssistantButton"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/mealPlannerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Planner"
                app:layout_constraintTop_toBottomOf="@+id/text"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/cookingAssistantButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cooking Assistant"
                app:layout_constraintTop_toBottomOf="@+id/groceryButton"
                tools:layout_editor_absoluteX="16dp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/TodayMealFragment"
                android:name="fooderie.mealPlanner.views.TodayMealFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@+id/recipeBrowserButton"
                app:layout_constraintBottom_toTopOf="@+id/WeeklyScheduleFragment"
                tools:layout="@layout/fragment_todaymeal"
                tools:layout_editor_absoluteX="0dp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/WeeklyScheduleFragment"
                android:name="fooderie.mealPlannerScheduler.views.WeeklyScheduleFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TodayMealFragment"
                tools:layout="@layout/fragment_weeklyschedule"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>